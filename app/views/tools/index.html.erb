<h1 class="text-center">Listing Tools</h1>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: tools_path, method: :get, class: "input-group mb-3" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a tool"
          %>
        <button class="btn btn-primary" type="submit">Search</button>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <% @tools.each do |tool| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <%= image_tag("banner.png", class: "card-img-top", width: 400, height: 300) %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%=tool.name %></h5>
            <h6>Price : <%= tool.price %></h6>
            <%= link_to "Show", tool_path(tool), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-4 justify-content-center">
    <%= link_to "New tool", new_tool_path, class: "btn btn-success" %>
  </div>
</div>
