<h1>Listing tools</h1>

<% @tools.each do |tool| %>
  <div>
    <%= cl_image_tag(
      tool.photos.first.key,
      width: 400,
      height: 300,
      crop: :fill
    ) %>
    <p>Name : <%=tool.name %></p>
    <p>Detail :<%=  tool.detail %></p>
    <p>Price : <%= tool.price %></p>
    <p>User : <%= tool.user.email %></p>
    <%= link_to "Show", tool_path(tool) %>
  </div>
<% end %>

<%= link_to "New tool", new_tool_path %>
