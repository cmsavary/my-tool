<div class="container my-5">
  <h2 class="text-center mb-5">Add a New Tool</h2>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow">
        <div class="card-body">
          <%= form_with(model: @tool, url: tools_path, local: true, class: "new-tool-form") do |f| %>

            <div class="mb-4">
              <%= f.label :name, class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-toolbox"></i></span>
                <%= f.text_field :name, class: 'form-control', placeholder: "Tool's name" %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :detail, class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text" id="basic-addon2"><i class="fas fa-info-circle"></i></span>
                <%= f.text_field :detail, class: 'form-control', placeholder: "More details" %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :price, class: 'form-label' %>
              <div class="input-group">
                <span class="input-group-text" id="basic-addon3"><i class="fas fa-dollar-sign"></i></span>
                <%= f.number_field :price, class: 'form-control', placeholder: "Price" %>
              </div>
            </div>

            <div class="actions text-center">
              <%= f.submit "Create Tool", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to 'Back', tools_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
